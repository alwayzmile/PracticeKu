<Window x:Class="AppendString.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PracticeKu: Append String" Height="350" Width="525">
    <Grid HorizontalAlignment="Left" Width="517">
        <Label Content="Input a String : " HorizontalAlignment="Left" 
               Margin="10,10,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="txtInput" Height="23" Margin="117,16,18,0" TextWrapping="Wrap" 
                 VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="229" 
                 Margin="117,44,0,0" IsReadOnly="True" 
                 HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" 
                 TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Width="382"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="117,277,0,0" 
                VerticalAlignment="Top" Width="75" FontSize="14" Click="btnAdd_Click"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="208,277,0,0" 
        	VerticalAlignment="Top" Width="75" FontSize="14" Click="btnClear_Click"/>
    </Grid>
</Window>
